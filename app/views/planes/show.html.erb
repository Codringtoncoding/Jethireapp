      <div>
        <span class="buttons" center>
        <%if @plane.user = current_user%>
          <%= link_to "Delete", plane_path(@plane), method: :delete, class: "btn btn-primary buttons-home"  %>
          <%= link_to "Book Plane", new_plane_booking_path(@plane), class: "btn btn-primary buttons-home" %>
          <%= link_to "Back to all planes", planes_path, class: "btn btn-primary buttons-home" %>
          <%end%>

  </div>

<br>

  <h3>Reviews</h3>
<% if @plane.reviews.empty? %>
    <p>Be the first to let a review</p>
  <% else %>
    <ul class="list-group">
      <% @plane.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-primary badge-pill">
            <% counter = 0 %>
            <% 5.times do %>
              <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
              <% counter += 1 %>
            <% end %>
          </span>
                <% if review.user == current_user %>
                 <%= link_to review_path(review), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash"></i>
                <% end %>
                <% end %>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
  <% end %>

<div>
  <%= render "reviews/new", plane: @plane, review: @review %>
</div>
