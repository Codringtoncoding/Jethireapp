
<body class="container-dashboard">
  <div class="title-dashboard">
    <h3 class="bold-text">Useful Information About Your Upcoming Flights</h3>
  </div>
  <% @bookings.each do |booking| %>
    <div class="cards-dashboard">
      <div class="gen-info card-info">
        <h5 class="bold-text"><%= booking.date.strftime('%A, %b %d') %> </h5>
        <h6 class="bold-text"><%= booking.time.strftime('%I:%M %p') %> </h6>
      </div>
      <div class="plane-info card-info text-center">
        <h5 class="bold-text"><%= booking.plane.name %></h5>
        <h6 class="bold-text">(<%= booking.plane.capacity %> passengers)</h6>
      </div>

      <div class="receipt-dash card-info">
        <h5 class="bold-text">Your Receipt:</h5>
        <h6 class="bold-text">Price: Â£<%= booking.plane.price %></h6>
      </div>
    </div>
  <% end %>

<%= link_to "Back to Home", root_path, class: "btn btn-primary btn-lg btn-dash" %>
</body>
