<div class="container">
  <h1><%= @plane.name %></h1>
  <%= link_to "Back to all planes", planes_path %>
  <br>

  <% if @plane.photo.attached? %>
  <%= cl_image_tag @plane.photo.key, height: 300, width: 400, crop: :fill  %>
  <% else %>
  <%= image_tag "learjet_60.jpg", height: 300, width: 400, crop: :fill %>
  <% end %>




<div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Info</h3>
      <table class="table table-bordered">

        <tbody>
          <thead>
            <th>Price</th>
            <th>Capacity</th>
          </thead>
            <tr>
           <td><%= @plane.price %></td>
           <td><%= @plane.capacity %></td>
            </tr>
        </tbody>

      </table>
    </div>
    <div class="col-sm-12 col-md-6">
    <%if @plane.user = current_user%>
     <%= link_to "Delete", plane_path(@plane), method: :delete, class: "btn btn-light btn-sm" %>
      <%end%>
    <div><%= link_to "book!", new_plane_booking_path(@plane), class: "btn btn-primary btn-lg"  %></div>
  </div>


  </div>

<br>

  <h3>Reviews</h3>
<% if @plane.reviews.empty? %>
    <p>Be the first to let a review</p>
  <% else %>
    <ul class="list-group">
      <% @plane.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-primary badge-pill">
            <% counter = 0 %>
            <% 5.times do %>
              <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
              <% counter += 1 %>
            <% end %>
          </span>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
  <% end %>

<div>
  <%= render "reviews/new", plane: @plane, review: @review %>
</div>
